{
  "name": "subtitle-translator",
  "version": "1.0.0",
  "description": "AI-powered subtitle translator supporting 50+ languages",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:workers": "wrangler dev workers/translator.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:workers\"",
    "build": "next build",
    "build:workers": "wrangler deploy workers/translator.ts",
    "pages:build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "translate:all": "tsx scripts/translate-locales.ts all",
    "translate:force": "tsx scripts/translate-locales.ts all --force",
    "translate:locale": "tsx scripts/translate-locales.ts locale",
    "translate:check": "tsx scripts/translate-locales.ts check",
    "generate:pairs": "tsx scripts/generate-language-pairs.ts",
    "generate:sitemap": "tsx scripts/generate-sitemap.ts",
    "pre-deploy": "tsx scripts/pre-deploy-check.ts"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.321.0",
    "next": "^14.2.0",
    "next-intl": "^3.9.0",
    "openai": "^4.28.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251011.0",
    "@playwright/test": "^1.41.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.0",
    "@types/negotiator": "^0.6.4",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.114.15"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
}
